@model AppUserSaveVM
@{
    Layout = "_LayoutLoginRegister";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4"><span class="fas fa-house-user"></span> Register</h3></div>
                <div class="card-body">
                    <form asp-action="Register" method="post" asp-controller="Account">
                        <div class="form-row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="@Model.UserName"></label>
                                    <input asp-for="@Model.UserName" class="form-control" />
                                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="@Model.Email"></label>
                                    <input asp-for="@Model.Email" class="form-control" />
                                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="@Model.Password"></label>
                                    <input asp-for="@Model.Password" class="form-control" />
                                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="@Model.ConfirmPassword"></label>
                                    <input asp-for="@Model.ConfirmPassword" class="form-control" />
                                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group mt-4 mb-0">
                            <input type="submit" value="Register" class="btn btn-primary btn-block" />
                        </div>

                    </form>
                </div>
                <div class="card-footer text-center">
                    <div class="small"><a asp-action="Login">Have an account? Go to login</a></div>
                </div>

            </div>
        </div>
    </div>
</div>


