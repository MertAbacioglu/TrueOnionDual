@model CategorySaveVM


<div class="row">
    <div class="col-lg-12">
        <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header"><h3 class="text-center font-weight-light my-4"><span class=""></span> Add Category</h3></div>
            <div class="card-body">
                <form asp-action="Add" method="post" asp-controller="Categories">

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="form-group">
                                    <label asp-for="@Model.ParentID"></label>

                                    <select asp-for="@Model.ParentID" asp-items="@(new SelectList(Model.CategoryVMs, nameof(CategoryVM.Id), nameof(CategoryVM.CategoryName)))" class="form-control"></select>

                                </div>
                            </div>
                            <br />
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="@Model.CategoryName"></label>
                                <input asp-for="@Model.CategoryName" class="form-control" />
                                <span asp-validation-for="@Model.CategoryName" class="text-danger"></span>
                            </div>
                            <br />
                        </div>

                    </div>



                    <div class="form-group">

                        <input type="submit" value="Add Category" class="btn-primary" />

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>